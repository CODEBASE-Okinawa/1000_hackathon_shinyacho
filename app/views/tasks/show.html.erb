<h2><%= @task.content %></h2>

<ul class="comment-list">
  <% if !@comments.nil? %>
    <% @comments.each do |comment| %>
      <div>
        <%= comment.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %>
      </div>
      <div>
        <%= link_to "#{comment.body}", edit_comment_path(comment.id) %>
      </div>
      <%# <li><%= text_field_tag "title", "#{comment.body}", class: "comment" %>
      <%# <%= button_to "完了", {controller: 'comments', action: 'update'}, {method: :put, params: {comment_id: "#{comment.id}", body: ""}} %>
      <%# </li> %>
    <% end %>
  <% end %>
</ul>
<%= form_with(model: @comment, local: true) do |f| %>
  <%= f.hidden_field :task_id, value: params[:id] %>
  <%= f.text_field :body, placeholder: "コメントを書く" %>
  <%= f.submit("送信") %>
<% end %>
