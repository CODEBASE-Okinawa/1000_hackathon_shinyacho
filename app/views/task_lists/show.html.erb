<%= javascript_pack_tag 'tasks/index' %>
<h2><%= @task_list.name %></h2>

<div class="task-form">
  <%= form_with(model: @task, local: true) do |f| %>
    <%# <%= f.label :content, "タスク" %>
    <%= f.text_field :content, placeholder: "タイトルを入力･･･" %>
    <% if @tasks.empty? %>
      <%= f.hidden_field :task_list_id, value: params[:id] %>
    <% else %>
      <%= f.hidden_field :task_list_id, value: @tasks.first.task_list_id %>
    <% end %>
    <%= f.submit("作成") %>
  <% end %>
</div>

<div class="task-list">
  <% if !@tasks.nil? %>
    <% @tasks.each do |task| %>
      <% if task.closed == false %>
        <div class="task">
          <%= check_box_tag :closed, true, false, {"data-id" => task.id} %>
          <label for="closed"><%= link_to "#{task.content}", task_path(task.id) %></label>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<h2>終了済み</h2>

<div class="task-list">
  <% if !@tasks.nil? %>
    <% @tasks.each do |task| %>
      <% if task.closed == true %>
        <div class="task">
          <%= check_box_tag :closed, true, false, {"data-id" => task.id} %>
          <label for="closed"><%= link_to "#{task.content}", task_path(task.id) %></label>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
